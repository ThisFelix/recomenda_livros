<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>NovoContato</servlet-name>
        <servlet-class>ifsp.pwe.contatos.servlets.NovoLivro</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NovoContato</servlet-name>
        <url-pattern>/novoContato</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>MeusLivros</servlet-name>
        <servlet-class>ifsp.pwe.contatos.servlets.MeusLivros</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MeusLivros</servlet-name>
        <url-pattern>/meusLivros</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>AceitaRecomenda</servlet-name>
        <servlet-class>ifsp.pwe.contatos.servlets.AceitaRecomenda</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AceitaRecomenda</servlet-name>
        <url-pattern>/AceitaRecomenda</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Corrigir</servlet-name>
        <servlet-class>ifsp.pwe.contatos.servlets.Recomendar</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Corrigir</servlet-name>
        <url-pattern>/corrigir</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BuscaContato</servlet-name>
        <servlet-class>ifsp.pwe.contatos.servlets.BuscaLivro</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BuscaContato</servlet-name>
        <url-pattern>/buscaContato</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>ifsp.pwe.contatos.servlets.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>ifsp.pwe.contatos.servlets.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/controller</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>Filtro</filter-name>
        <filter-class>ifsp.pwe.contatos.servlets.Filtro</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Filtro</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>ifsp.pwe.contatos.servlets.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>ifsp.pwe.contatos.servlets.Index</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
